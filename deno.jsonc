{
  "tasks": {
    "lint": "deno lint && deno fmt --check",
    "fmt": "deno fmt",
    // Temporary workaround for absence of a good coverage tool.
    "test": "rm -rf .coverage && deno test --coverage=.coverage **/*.test.ts && deno run -A scripts/coverage.ts",
    "test:v": "vitest"
  },
  "imports": {
    "@/signal/": "./signal/",
    "@std/assert": "jsr:@std/assert@^1.0.3",
    "@std/async": "jsr:@std/async@^1.0.4",
    "@std/expect": "jsr:@std/expect@^1.0.1",
    "@std/path": "jsr:@std/path@^1.0.3",
    "@std/streams": "jsr:@std/streams@^1.0.3",
    "@std/testing": "jsr:@std/testing@^1.0.1"
  },
  "exports": {},
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "dom.extras", "deno.ns"],
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "fmt": {
    "include": ["./"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "never"
  },
  "lint": {
    "exclude": ["node_modules/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "no-external-import",
        "ban-untagged-todo",
        "camelcase",
        "eqeqeq",
        "no-eval",
        "no-non-null-assertion",
        "no-non-null-asserted-optional-chain",
        "no-sparse-arrays",
        "explicit-function-return-type"
      ],
      "exclude": ["no-empty-interface"]
    }
  }
}
